@model TurfManagement.Models.TurfModel

@{
    ViewBag.Title = "List Turf";
}
<head>
    <!-- Include jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include other necessary scripts here -->
    <script src="../scripts/jquery.validate.js"></script>
    <script src="../scripts/jquery.validate.unobtrusive.js"></script>
    <script src="../scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="../scripts/jquery.validate.min.js"></script>
</head>

<h2>List Turf</h2>

<div class="alert alert-success" id="successMessage" style="display: none;">
    Data saved successfully!
</div>

<div class="alert alert-danger" id="errorMessage" style="display: none;">
    Error occurred while saving data.
</div>

<body>
    @using (Html.BeginForm("ListTurf", "TurfController", FormMethod.Post))
    {
        <label for="date">Select Date:</label>
        <input type="date" id="datePicker" class="form-control mb-3" />

        <label for="turfDropdown">Select Turf:</label>
        <select id="turfDropdown" class="form-control mb-3">
            <option value="">Select Turf</option>
            @foreach (var turf in Model.Turfs)
            {
                <option value="@turf.TurfId">@turf.TurfName</option>
            }
        </select>

        <script>var getSportsUrl = '@Url.Action("GetSports", "Turf")';</script>

        <label for="sportDropdown">Select Sport :</label>
        <select id="sportDropdown" class="form-control mb-3">
            <option value="">Select Sport</option>
        </select>

        <script>
            var getAvailableTimeSlotsUrl = '@Url.Action("GetAvailableTimeSlots", "Turf")';
        </script>

        <script>
            var bookTimeSlotUrl = '@Url.Action("BookTimeSlots", "Turf")';
        </script>

        <script>
            var userId = @ViewBag.userId;
        </script>

    }
    <div id="timeSlotButtonsContainer" class="mt-3"> </div>

    <div class="buttonContainer">
        <button id="submitButton" class="btn btn-primary mt-3">Book Now</button>
        <button type="button" class="btn btn-warning mt-3" id="clearButton">Clear</button>
    </div>


</body>

<script src="~/Js/TurfValidation.js"></script>






